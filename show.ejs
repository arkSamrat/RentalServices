<!DOCTYPE html>
<html>
<head>
    <title>User Data</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-black text-white">
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-6">User Data</h1>

        <h2 class="text-2xl font-semibold mb-4">Bikes</h2>
        <ul class="mb-6">
            <% allUserBikes.forEach(function(bike) { %>
                <li class="flex items-center justify-between bg-green-700 p-4 mb-2 rounded">
                    <span><%= bike.name %> - <%= bike.bbrand %></span>
                    <form action="/deleteBike/<%= bike._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <h2 class="text-2xl font-semibold mb-4">Cars</h2>
        <ul class="mb-6">
            <% allUserCars.forEach(function(car) { %>
                <li class="flex items-center justify-between bg-green-700 p-4 mb-2 rounded">
                    <span><%= car.name %> - <%= car.cbrand %></span>
                    <form action="/deleteCar/<%= car._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <h2 class="text-2xl font-semibold mb-4">PG</h2>
        <ul class="mb-6">
            <% allUserPg.forEach(function(pg) { %>
                <li class="flex items-center justify-between bg-green-700 p-4 mb-2 rounded">
                    <span><%= pg.name %> - <%= pg.location %> - <%= pg.room %></span>
                    <form action="/deletePg/<%= pg._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <h2 class="text-2xl font-semibold mb-4">Rooms</h2>
        <ul class="mb-6">
            <% allUserRoom.forEach(function(room) { %>
                <li class="flex items-center justify-between bg-green-700 p-4 mb-2 rounded">
                    <span><%= room.name %> - <%= room.location %></span>
                    <form action="/deleteRoom/<%= room._id %>" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>
