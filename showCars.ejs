<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cars</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .scroll-container {
            overflow-x: auto;
            white-space: nowrap;
            scrollbar-width: none; 
            -ms-overflow-style: none; 
        }

        .scroll-container::-webkit-scrollbar {
            display: none; 
        }
    </style>
</head>

<body class="bg-zinc-800 text-white">

    <div id="container" class="min-h-screen flex flex-col items-center justify-center p-4">
        <% carsfind.forEach((car, index) => { %>
        <div class="max-w-md w-full bg-neutral-950 rounded-lg shadow-lg mb-8 overflow-hidden transform transition-transform hover:scale-105">
            <div class="scroll-container flex">
                <% car.cimage.forEach((image, idx) => { %>
                <img src="/images/cars/<%= image %>" class="car-image object-cover w-64 h-64 inline-block mr-4">
                <% }); %>
            </div>
            <div class="p-4">
                <div class="mb-4">
                    <label class="block bg-zinc-900 text-white px-4 py-2 rounded-md capitalize">Location: <%= car.clocation %></label>
                </div>
                <div class="mb-4">
                    <label class="block bg-zinc-900 text-white px-4 py-2 rounded-md">Brand: <%= car.cbrand %></label>
                </div>
                <div class="mb-4">
                    <label class="block bg-zinc-900 text-white px-4 py-2 rounded-md">Rent: <%= car.crent %></label>
                </div>
                <div class="mb-4">
                    <label class="block bg-zinc-900 text-white px-4 py-2 rounded-md">Contact: <%= car.contact %></label>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
        integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            gsap.from(".max-w-md", {
                duration: 1,
                opacity: 0,
                y: 50,
                stagger: 0.2,
                ease: "power4.out"
            });
        });
    </script>

</body>

</html>
