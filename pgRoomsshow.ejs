<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rooms</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>

<body class="bg-zinc-900 text-white min-h-screen flex flex-col items-center justify-center">

    <div id="sum" class="container mx-auto p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% userss.map((room, index) => { %>
            <div id="container-<%= index %>" class="border border-neutral-700 rounded-lg overflow-hidden shadow-lg bg-neutral-800 transform transition-transform hover:scale-105">
                <div class="flex overflow-hidden">
                    <% for(let i = 0; i < room.images.length; i++) { %>
                        <div id="img" class="w-64 h-64">
                            <img src="/images/Rooms/<%= room.images[i] %>" class="object-cover w-full h-full">
                        </div>
                    <% } %>
                </div>
                <div id="mini" class="p-4 space-y-2">
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Location: <%= room.location %></label>
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Flat: <%= room.room %></label>
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Nearby Famous Place: <%= room.nfp %></label>
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Rent: <%= room.rent %></label>
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Address: <%= room.address %></label>
                    <label class="block bg-neutral-700 rounded-md px-2 py-1">Contact: <%= room.contact %></label>
                </div>
            </div>
        <% }); %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            gsap.from("[id^='container-']", {
                duration: 1,
                opacity: 0,
                y: 50,
                stagger: 0.2,
                ease: "power4.out"
            });
        });
    </script>

</body>

</html>
